<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
	<title>会员列表</title>
	<link rel="stylesheet" href="__PUBLIC__/Css/public.css" />
</head>
<body>
	<table class="table">
		<tr>
			<th>会员列表</th>
			<th colspan="7"><a href="{:U(GROUP_NAME .'/Rbac/user_add')}">会员添加</a></th>
		</tr>
		<tr>
			<td align="right">ID</td>
			<td align="right">用户名</td>
			<td align="right">邮箱</td>
			<td align="right">最后登录时间</td>
			<td align="right">最后登录IP</td>
			<td align="right">所属用户组</td>
			<td align="right">状态</td>
			<td align="right">操作</td>
		</tr>
		<foreach name="list" item="v">
			<tr>
				<td>{$v.id}</td>
				<td>{$v.username}</td>
				<td>{$v.email}</td>
				<td>{$v.last_login_time|date='Y-m-d H:i',###}</td>
				<td>{$v.last_login_ip}</td>
				<td>
					<foreach name="v.role" item="r">
						{$r.name}({$r.remark})<br>
					</foreach>
				</td>
				<td>
					<if condition="$v.status eq 1">
						锁定
						<else/>
						正常
					</if>
				</td>
				<td>
					[<a href="{:U(GROUP_NAME .'/Rbac/user_edit',array('id' =>$v['id']))}">修改</a>]
					[<a href="{:U(GROUP_NAME .'/Rbac/user_del',array('id' =>$v['id']))}">删除</a>]
				</td>
			</tr>
		</foreach>
		<th colspan="8">{$page}</th>
	</table>
</body>
</html>