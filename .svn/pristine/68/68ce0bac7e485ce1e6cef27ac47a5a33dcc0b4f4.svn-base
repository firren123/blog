<include file="Public:header" />
<link rel="stylesheet" href="__PUBLIC__/Css/index.css" />
<include file="Public:nav" />
<!--主体-->
<div class='main'>
	<div class='main-left'>
		<p>80年代博文</p>
		<foreach name="list" item="vo">
			<dl>
				<dt>
					{$vo.name}
					<a href="c_{$vo.id}">更多>></a>
				</dt>
				<foreach name="vo.blog" item="v">
					<dd>
						<a href="{:U('/'.$v['id'])}" alt="{$v.title}" title="{$v.title}">{$v.title|mb_substr=0,20,'utf-8'}</a>
						<span>{$v.add_time|date='m/d',###}</span>
					</dd>
				</foreach>

			</dl>
		</foreach>

	</div>

	<!--主体右侧-->
	<include file="Public:right" />
</div>
<!--底部-->
<include file="Public:footer" />